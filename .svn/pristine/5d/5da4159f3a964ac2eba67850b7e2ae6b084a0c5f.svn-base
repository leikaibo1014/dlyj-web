html,body{ 
	width:100%;
	height:100%;
}

canvas{
  display:block;
  vertical-align:bottom;
}


#particles-js{
	width: 100%;
	height: 100%;
	position: relative;
	background-image: url(../../img/bg.jpg);
	background-position: 50% 50%;
	background-size: cover;
	background-repeat: no-repeat;
	margin-left: auto;
	margin-right: auto;
}



.login{z-index: 2;position:absolute;width: 525px;border-radius: 5px;height: 400px;background-color:rgba(248,248,255,0.3);box-shadow: 0px 0px 5px #333333;top: 50%;left: 46%;margin-top: -250px;margin-left: -200px;transition: all 1s;-moz-transition: all 1s;	}

.login-top{font-size: 24px;margin-top: 40px;padding-left: 0px;box-sizing: border-box;color: #333333;margin-bottom: 50px;}
.login-top1{font-size: 18px;margin-top: 40px;padding-left: 0px;box-sizing: border-box;color: #333333;margin-bottom: 50px;}
.login-center{width: 100%;box-sizing: border-box;padding: 0 110px;margin-bottom: 30px;}
.login-center-img{width: 20px;height: 20px;float: left;margin-top: 5px;}
.login-center-img>img{width: 100%;}
.login-center-input{float: left;width: 230px;margin-left: 5px;height: 30px;position: relative;}
.login-center-input input{z-index: 2;transition: all 0.5s;padding-left: 10px;color: #333333;width: 100%;height: 30px;border: 0;border-bottom: 1px solid #cccccc;border-top: 1px solid #ffffff;border-left: 1px solid #ffffff;border-right: 1px solid #ffffff;box-sizing: border-box;outline: none;position: relative;}
.login-center-input input:focus{border: 1px solid dodgerblue;}
.login-center-input-text{background: white;padding: 0 5px;position: absolute;z-index: 0;opacity: 0;height: 25px;top: 50%;margin-top: -10px;font-size: 22px;left: 5px;color: dodgerblue;line-height: 20px;transition: all 0.5s;-moz-transition: all 0.5s;	}
.login-center-input input:focus~.login-center-input-text{top: 0;z-index: 3;opacity: 1;margin-top: -15px;}
.login.active{-webkit-animation: login-small 0.8s ; animation: login-small 0.8s ;animation-fill-mode:forwards;-webkit-animation-fill-mode:forwards}

.login-button{cursor: pointer;width: 200px;text-align: center;height: 40px;line-height: 40px;background-color: dodgerblue;border-radius: 5px;margin: 0 auto;margin-top: 50px;color: white;}



